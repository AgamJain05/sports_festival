---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sports Festival 2024 - The Ultimate Sports Experience" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-neutral">
    <header class="fixed w-full bg-white/90 backdrop-blur-md shadow-lg z-50 transition-all duration-300">
      <nav class="container mx-auto px-4">
        <div class="flex justify-between items-center h-20">
          <a href="#home" class="flex items-center -my-2">
            <img src="/logo.png" alt="ISC Logo" class="h-16 md:h-20 transform hover:scale-105 transition-transform duration-300" />
          </a>
          <!-- Desktop Menu -->
          <div class="hidden md:flex space-x-8 items-center">
            <a href="#home" class="nav-link group">
              <span class="relative py-2 px-1">
                Home
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
              </span>
            </a>
            <a href="#about" class="nav-link group">
              <span class="relative py-2 px-1">
                About
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
              </span>
            </a>
            <a href="#sports" class="nav-link group">
              <span class="relative py-2 px-1">
                Sports
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
              </span>
            </a>
            <a href="#schedule" class="nav-link group">
              <span class="relative py-2 px-1">
                Schedule
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
              </span>
            </a>
            <a href="#register" class="nav-link group px-4 py-2 bg-primary text-white rounded-full hover:bg-primary/90 transition-colors duration-300 flex items-center">
              Register
            </a>
            <a href="#contact" class="nav-link group">
              <span class="relative py-2 px-1">
                Contact
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
              </span>
            </a>
          </div>
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden pb-4">
          <div class="flex flex-col space-y-4">
            <a href="#home" class="mobile-link">Home</a>
            <a href="#about" class="mobile-link">About</a>
            <a href="#sports" class="mobile-link">Sports</a>
            <a href="#schedule" class="mobile-link">Schedule</a>
            <a href="#contact" class="mobile-link">Contact</a>
            <a href="#register" class="bg-primary text-white px-4 py-2 rounded-full text-center hover:bg-primary/90 transition-colors">
              Register
            </a>
          </div>
        </div>
      </nav>
    </header>
    <main class="pt-16">
      <slot />
    </main>
    <footer class="bg-gray-900 text-white mt-20">
      <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Sports Festival 2025</h3>
            <p>The Ultimate Sports Experience</p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="#about" class="hover:text-primary transition-colors">About</a></li>
              <li><a href="#sports" class="hover:text-primary transition-colors">Sports</a></li>
              <li><a href="#schedule" class="hover:text-primary transition-colors">Schedule</a></li>
                <li><a href="#register" class="text-black hover:text-primary transition-colors">Register</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Contact</h4>
            <ul class="space-y-2">
              <li>Email: info@sportsfest2025.com</li>
              <li>Phone: </li>
              <li>DAVV, Indore(MP)</li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Follow Us</h4>
            <div class="flex space-x-4">
